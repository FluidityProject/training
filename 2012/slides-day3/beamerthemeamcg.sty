\definecolor{beamer@icdarkblue}{RGB}{0,51,102}
%\definecolor{beamer@icdarkblue}{RGB}{23,18,134}
%\definecolor{beamer@icmiddleblue}{RGB}{0,82,150} 
\definecolor{beamer@icmiddleblue}{RGB}{23,18,134}
\definecolor{beamer@iclightblue}{RGB}{200,212,232}
\definecolor{beamer@icmiddlered}{RGB}{204,51,0}
\definecolor{beamer@iclightred}{RGB}{232,212,32}

\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{example text}{fg=green!50!black}

\renewcommand{\emph}{\alert}

\setbeamercolor{structure}{fg=beamer@icmiddleblue}

\setbeamertemplate{blocks}[rounded][shadow=true]

\setbeamercolor{block title}{fg=beamer@iclightblue,bg=beamer@icmiddleblue}
\setbeamercolor{block body}{fg=beamer@icdarkblue,bg=beamer@iclightblue}

\setbeamercolor{block title alerted}{fg=beamer@iclightred,bg=beamer@icmiddlered}
\setbeamercolor{block body alerted}{fg=beamer@icmiddlered,bg=beamer@iclightred}

\setbeamercolor{author
in head/foot}{fg=beamer@iclightblue,bg=beamer@icmiddleblue}
\setbeamercolor{institute in head/foot}{}

\setbeamercolor*{titlelike}{parent=structure}

\defbeamertemplate*{frametitle}{amcg theme}
{
\begin{beamercolorbox}[center,wd=\textwidth]{frametitle}
	\usebeamerfont{frametitle}\insertframetitle
\end{beamercolorbox}%
}

\defbeamertemplate*{headline}{amcg theme}
{%
\begin{beamercolorbox}[leftskip=.2cm,ht=0.5cm,dp=0.1cm,wd=\textwidth]{institute in head/foot}
	\includegraphics[height=.4cm]{icl2}
\end{beamercolorbox}%
}

\defbeamertemplate*{footline}{amcg theme}
{%
\begin{beamercolorbox}[ht=.25cm,dp=0.2cm,wd=\textwidth,leftskip=.3cm]{author in head/foot}%
	\begin{minipage}[c]{8cm}%
	\usebeamerfont{author in head/foot}
	\insertshortauthor
	\insertshorttitle
	\end{minipage}\hfill% 
	\begin{minipage}{3.cm}
	\hfill\includegraphics[height=.35cm]{AMCGFlow-long}
	\end{minipage}
\end{beamercolorbox}%
}

\defbeamertemplate*{title page}{amcg theme}[1][]
{
  \vbox{}
  %\vfill
  \begin{centering}
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}\vskip0.5em
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \end{centering}
  \vfill
}
