\begin_deeper
\begin_layout Plain Layout
Rule for change of variables in integrals is
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\iint_{\Omega}f\left(x,y\right)\, dx\, dy=\int_{0}^{1}\int_{0}^{1-\chi}f\left(\xi\left(x,y\right),\chi\left(x,y\right)\right)\frac{\partial\left(x,y\right)}{\partial\left(\left(\xi,\chi\right)\right)}\, d\xi\: d\chi
\]

\end_inset


\end_layout

\begin_layout Plain Layout
here the change of variables is given by
\begin_inset Formula 
\[
\xi=\frac{\left(x-x_{A}\right)\left(x_{B}-x_{A}\right)+\left(y-y_{A}\right)\left(y_{B}-y_{A}\right)}{\left(x_{B}-x_{A}\right)^{2}+\left(y_{B}-y_{A}\right)^{2}},
\]

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\chi=\frac{\left(x-x_{A}\right)\left(x_{C}-x_{A}\right)+\left(y-y_{A}\right)\left(y_{C}-y_{A}\right)}{\left(x_{C}-x_{A}\right)^{2}+\left(y_{C}-y_{A}\right)^{2}}.
\]

\end_inset

 
\end_layout

